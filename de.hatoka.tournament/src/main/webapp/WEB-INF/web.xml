<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://java.sun.com/xml/ns/javaee"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
    id="WebApp_ID" version="3.0">
    <description>HATOKA Tournament Application</description>
    <resource-ref>
        <description>Tournament DB</description>
        <res-ref-name>jdbc/TournamentDB</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    <servlet>
        <servlet-name>Tournament Application</servlet-name>
        <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
        <init-param>
            <param-name>javax.ws.rs.Application</param-name>
            <param-value>de.hatoka.tournament.internal.app.TournamentApplication</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>Tournament Application</servlet-name>
        <url-pattern>/tournament/*</url-pattern>
    </servlet-mapping>
</web-app>